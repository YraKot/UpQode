#banner

	.slideshow-container
		max-width 100%
		position relative
		margin auto

		figure
			display: none 
			margin: 0
			position: relative
			.overlay 
				background-image: -moz-linear-gradient( 161deg, rgb(80,51,146) 0%, rgb(92,55,165) 24%, rgb(103,58,183) 49%, rgb(0,191,243) 100%);
				background-image: -webkit-linear-gradient( 161deg, rgb(80,51,146) 0%, rgb(92,55,165) 24%, rgb(103,58,183) 49%, rgb(0,191,243) 100%);
				background-image: -ms-linear-gradient( 161deg, rgb(80,51,146) 0%, rgb(92,55,165) 24%, rgb(103,58,183) 49%, rgb(0,191,243) 100%);
				opacity: 0.8;
				position absolute
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				width: 100%
				height: 100%
				z-index: 320;
			img
				max-width 100%
				height 100%
				object-fit: cover
			figerecaption 
				position absolute
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				text-align: center
				z-index: 350

				h1
					font-size: 64px
					font-family: 'Lato Bold'
					text-transform: uppercase
					color #ffffff
					span 
						color #fff200

				p
					margin: 0 auto
					font-family: 'Lato Regular'
					font-size: 16px
					color #ffffff
					line-height: 1.875;
					max-width 674px
		.arrow
			position: absolute
			z-index 999
			top 50%
			width 60px
			height: 60px
			background: rgba(255,255,255,0.2)
			a 
				text-decoration: none 
				
			&:after
				position absolute
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				color #ffffff
				font-size: 24px

		.next
			left 50px
			&:after
				content: '\02039'
		.prev 
			right 50px
			&:after
				content: '\0203A'
	
		.prev:hover, .next:hover
			background-color rgba(255,255,255,0.4)

		.dot_wrap
			position absolute
			left 50%
			bottom: 40px
			transform: translateY(-50%)
			z-index 350
			span 
				cursor pointer
				display inline-block
				border-radius: 50%
				background: #b7b7b7
				width: 10px
				height 10px
				margin: 5px

		.active, .dot:hover
			background-color #ffffff

	.fade
		-webkit-animation-name fade
		-webkit-animation-duration 1.5s
		animation-name fade
		animation-duration 1.5s

	@keyframes fade
		from 
			opacity .4

		to
			opacity 1

