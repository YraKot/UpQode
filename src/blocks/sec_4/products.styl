#products
	margin: auto
	background-image: url('/images/prod_bg.png')
	background-position: center
	background-repeat: no-repeat
	background-size: cover
	.title
		
		position relative
		height 152px
		background-image: url('/images/products.jpg')
		background-position: center
		background-repeat: no-repeat
		background-size: cover
		display: flex
		justify-content: center
		align-items: center
		-webkit-clip-path: polygon(0% 0%, 100% 0%, 100% 70%, 54% 70%, 50% 100%, 46% 70%, 0% 70%)
		clip-path: polygon(0% 0%, 100% 0%, 100% 70%, 54% 70%, 50% 100%, 46% 70%, 0% 70%)
		h1
			z-index 221
			text-align:  center
			font-size: 35px
			font-family: 'Lato Bold'
			text-transform: uppercase
			color #ffffff
			padding-bottom: 48px 
			margin: 0
			span 
				color #fff200
		.overlay_prod
			background-image: -moz-linear-gradient( 161deg, rgb(0,191,243) 0%, rgb(103,58,183) 51%, rgb(92,55,165) 76%, rgb(80,51,146) 100%);
			background-image: -webkit-linear-gradient( 161deg, rgb(0,191,243) 0%, rgb(103,58,183) 51%, rgb(92,55,165) 76%, rgb(80,51,146) 100%);
			background-image: -ms-linear-gradient( 161deg, rgb(0,191,243) 0%, rgb(103,58,183) 51%, rgb(92,55,165) 76%, rgb(80,51,146) 100%);
			opacity: 0.8;
			position: absolute;
			left: 0px;
			top: 0;
			width: 100%;
			height: 100%;
			z-index: 220;
	.prod_wrapper
		width 68vw
		overflow hidden
		margin: auto
		.prod_dots
			display: flex
			justify-content: center
			margin 70px 0
			span 
				width 10px
				height 10px
				border-radius: 50%
				background-color: #d7d7d7
				cursor pointer
				margin: 5px
			.selected
				background-color: #503392
		.prod_container
			width: 204vw
			display: flex
			position relative
			transition: 1s
			left:0
			
			.prod_grid
				display: inline-flex
				flex-direction: row
				flex-wrap: wrap
				justify-content: center
				width: 68vw
				.prod_item
					padding: 15px
					margin-top: 100px
					width: 33%
					display: flex
					flex-direction: row
					flex-wrap: wrap
					justify-content: center
					.prod_img
						width 40%
						img 
							max-width 100%
					.prod_description
						width: 60%
						padding: 15px 20px
						// min-width: 220px
						h2 
							margin: 0
							padding: 0
							padding-bottom: 10px
							font-family: 'Lato Heavy'
							font-size: 12px 24px
							color #232323
							text-transform: uppercase
						span 
							color #503392
							font-family: 'Lato Regular'
							font-size: 16px
							padding: 0
						p
							padding: 0 
							padding-top: 10px
							margin: 0
							color #acacac
							font-family: 'Lato Light'
							font-size: 14px
							line-height: 1.729;
@media screen and (max-width: 1024px)
	#products
		width 100vw
		.prod_item
			.prod_img
				width 100% !important
				display: flex
				justify-content: center
			.prod_description
				width: 100% !important
				display: flex
				flex-direction: column
				align-items: center
				p 
					text-align: center

@media screen and (max-width: 800px)
	.prod_item
		width 50% !important

@media screen and (max-width: 600px)
	.prod_item
		width 100% !important
