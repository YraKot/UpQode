
#about
	display: flex
	flex-direction: row
	flex-wrap: wrap
	width 68vw
	height: 100%
	margin: auto


	.mockup
		width 50%
		display: flex
		justify-content: flex-end
		align-items: flex-end
		padding 15px
		img 
			max-width 100%

	.skills_wrap
		width 50%
		display: flex
		align-items: flex-end
		padding 15px
		.skills
			width: 100%
			max-width 555px
			.title
				h1 
					color #373737
					font-size 35px
					font-family: 'Lato Bold'
					text-transform: uppercase
					margin: 0
					span
						color #009dda
				p 	
					color #b8b8b8
					font-family: 'Lato Regular'
					font-size: 14px
			p 
				font-family: 'Lato Regular'
				font-size: 14px
				color #373737
				line-height: 1.714;
				padding: 30px 0
				margin: 0
			#skill
				list-style none
				position relative
				line-height 2em
				padding: 0
				padding-bottom: 30px 
				margin: 0

				li
					margin-top: 70px
					border 1px solid rgb(221, 221, 221);
					height 11px

					.skill_info
						position relative
						top -40px

						display: flex
						justify-content: space-between
						h3
							margin: 0
							text-transform: uppercase
							font-family: 'Lato Bold'
							font-size: 13px
							color #444444
			.bar
				height 3px
				margin: 3px
				background-color: rgb(0, 157, 218);
				position absolute
				
			

			.ps 
				width 79%
				-moz-animation ps 2s ease-out
				-webkit-animation ps 2s ease-out
				background-color: rgb(0, 157, 218);

			.css
				width 90%
				-moz-animation css 2s ease-out
				-webkit-animation css 2s ease-out
				background-color: rgb(0, 157, 218);

			.js
				width 69%
				-moz-animation js 2s ease-out
				-webkit-animation js 2s ease-out
				background-color: rgb(0, 157, 218);

			.wp
				width 92%
				-moz-animation wp 2s ease-out
				-webkit-animation wp 2s ease-out
				background-color: rgb(0, 157, 218);

@-moz-keyframes ps {
	0% { width: 0px}

	100% { 
		width 100%
		width 90%
		width 65%
		width 80%
		width 100%
		width 90%
		width 65%
		width 80%
	}
}
@-moz-keyframes ps {
	0% {width: 0px}
}
@-moz-keyframes css{	
	0% {width: 0px}
}	
@-moz-keyframes js {
	0% {width: 0px}
}
@-moz-keyframes wp {
	0% {width: 0px}
}

@-webkit-keyframes ps {
	0% {width: 0px}
}
@-webkit-keyframes css{	
	0% {width: 0px}
}	
@-webkit-keyframes js {
	0% {width: 0px}
}
@-webkit-keyframes wp {
	0% {width: 0px}
}

@media screen and (max-width: 1024px)
	#about
		width 100vw
		.skills_wrap
			width 100%
			margin: auto
			justify-content: center
		.mockup
			width 100%
			justify-content: center
